{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "types": ["jest", "node"],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "*", "tests/*.ts"
    ],
}
